{
  "openapi": "3.1.0",
  "info": {
    "title": "YouTube Comment Analyzer Bot",
    "description": "Telegram bot for analyzing YouTube video comments",
    "contact": {
      "name": "Roman Iutsis"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.1.0"
  },
  "paths": {
    "/analyze/youtube/comments": {
      "post": {
        "tags": [
          "YouTube Analysis"
        ],
        "summary": "Analyze Youtube Video",
        "operationId": "analyze_youtube_video_analyze_youtube_comments_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VideoAnalysisRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VideoAnalysisResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Root",
        "description": "Health check endpoint.",
        "operationId": "root_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      },
      "VideoAnalysisRequest": {
        "properties": {
          "video_url": {
            "type": "string",
            "title": "Video Url"
          },
          "language": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "en",
                  "ru"
                ]
              },
              {
                "type": "null"
              }
            ],
            "title": "Language",
            "default": "en"
          }
        },
        "type": "object",
        "required": [
          "video_url"
        ],
        "title": "VideoAnalysisRequest",
        "description": "Request model for video analysis."
      },
      "VideoAnalysisResponse": {
        "properties": {
          "analyze_result": {
            "type": "string",
            "title": "Analyze Result"
          },
          "count_comments_per_sentiment": {
            "additionalProperties": {
              "type": "integer"
            },
            "type": "object",
            "title": "Count Comments Per Sentiment"
          },
          "likes_per_category": {
            "additionalProperties": {
              "type": "integer"
            },
            "type": "object",
            "title": "Likes Per Category"
          },
          "video_info": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/VideoInfo"
              },
              {
                "type": "null"
              }
            ]
          },
          "comments_count": {
            "type": "integer",
            "title": "Comments Count",
            "default": 0
          }
        },
        "type": "object",
        "required": [
          "analyze_result",
          "count_comments_per_sentiment",
          "likes_per_category"
        ],
        "title": "VideoAnalysisResponse",
        "description": "Response model for video analysis."
      },
      "VideoInfo": {
        "properties": {
          "video_id": {
            "type": "string",
            "title": "Video Id"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "channel": {
            "type": "string",
            "title": "Channel"
          }
        },
        "type": "object",
        "required": [
          "video_id",
          "title",
          "channel"
        ],
        "title": "VideoInfo",
        "description": "Basic video information."
      }
    }
  },
  "tags": [
    {
      "name": "YouTube Analysis",
      "description": "Endpoints to analyze YouTube videos and comments"
    }
  ]
}